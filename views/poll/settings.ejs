<!DOCTYPE html>
<% include ../includes/html %>
<head>
    <% include ../includes/metadata %>
    <title>投票</title>
    <link rel="stylesheet" href="<%= static_url %>stylesheets/poll.css">
    <link rel="stylesheet" href="<%= static_url %>stylesheets/animate.css">
    <% include ../includes/production %>
    <script src="<%= tat_static %>javascripts/vendor/modernizr-2.7.1.min.js"></script>
</head>
<body id="poll-settings-wrapper">
    <header class="container header-navbar">
        <div class="navbar-body">
            <span class="navbar-title">投票设置</span>
        </div>
        <div class="btn btn-link btn-back pull-left" data-route="return">
            <i class="ift ift-arrow-left"></i>
            <link class="rippleJS" />
        </div>
        <div class="btn btn-link btn-goto-dashboard pull-right">
            <span>投票结果</span>
        </div>
    </header>
    <div class="container poll-body">
        <div class="img poll-bg"></div>
        <input class="text-center" name="poll-title" id="poll-title" type="text" placeholder="请输入投票标题"/>
        <textarea class="text-center" name="poll-message" id="poll-message" placeholder="请输入投票开场白"></textarea>
        <div class="poll-option-list"></div>
        <div class="poll-option-add text-center">
            <i class="ift ift-plus btn-add-poll-option"></i>
        </div>
        <div class="poll-deadline-wrapping">
            <div class="poll-deadline">
                <span>设定截止日期 :</span>
                <input name="poll-deadline" id="poll-deadline" type="date"/>
            </div>
        </div>
        <div class="poll-type">
            <span>设定投票类型 :</span>
            <select name="poll-type" id="poll-type">
                <option value="1">默认单选</option>
                <option value="0">可以多选</option>
            </select>
        </div>
    </div>
    <footer class="footer-navbar footer-btn">
        <div class="btn-save has-ripple">保存</div>
    </footer>


    <% include ../templates %>
    <% include ../includes/javascripts %>
    <script src="<%= cdn_url %>/javascripts/poll-settings.js"></script>
</body>
<script>
    new WOW().init();
</script>

<% include ../includes/analytics %>
</html>

