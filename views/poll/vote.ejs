<!DOCTYPE html>
<% include ../includes/html %>
<head>
    <% include ../includes/metadata %>
    <title>投票</title>
    <link rel="stylesheet" href="<%= static_url %>stylesheets/poll.css">
    <% include ../includes/production %>
    <script src="<%= tat_static %>javascripts/vendor/modernizr-2.7.1.min.js"></script>
</head>
<body id="poll-vote-wrapper">
    <header class="container header-navbar">
        <div class="navbar-body">
            <span class="navbar-title">参与投票</span>
        </div>
        <div class="btn btn-link btn-back pull-left" data-route="return">
            <i class="ift ift-arrow-left"></i>
            <link class="rippleJS" />
        </div>
    </header>
    <div class="container poll-body">
        <div class="img poll-bg"></div>
        <div class="poll-title text-center"></div>
        <div class="poll-message text-center"></div>
        <div class="poll-dashboard-total">
            <div class="dashboard-total-num text-center hidden">
                <span>参与投票总数: </span>
                <span class="text-default-color"></span>
            </div>
        </div>

        <div class="poll-items-wrapper"></div>

        <div class="poll-result-wrapper hidden"></div>
        <div class="poll-deadline">
            <span>投票截止日期: </span>
            <span class="poll-deadline-text"></span>
        </div>
    </div>
    <footer class="footer-navbar footer-btn">
        <div class="btn-save has-ripple" enable="false">提交</div>
    </footer>

    <% include ../templates %>
    <% include ../includes/javascripts %>
    <script src="<%= cdn_url %>/javascripts/poll-vote.js"></script>
</body>

<% include ../includes/analytics %>
</html>

